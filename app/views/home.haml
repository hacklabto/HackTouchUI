.row.page-header
  %h1
    HackTouch
    %small now with 110% more 2.0

.row.music-player
  .span12
    .music-title
      %i.icon-headphones
      %span.song-name No connection to music player
    .volume-level
      %i.icon-volume-down
      .progress.progress-success.volume-level-progress
        .bar{style: "width: 40%"}
      %i.icon-volume-up

    .btn-group
      %button.btn.btn-large.audio-play
        %i.icon-play
        Play
      %button.btn.btn-large.audio-stop
        %i.icon-stop
        Stop

